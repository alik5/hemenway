<!DOCTYPE html>

<html>
	<head>
		<title>Apartments</title>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	</head>
	<body>
		<form title="form">
			<input type="city_neighborhood" id="query">
			<select id="typeSelect">
				<option value="city_neighborhood">Neighborhood</option>
				<!--<option value="Minimum">Minimum</option>
				<option value="Maximum">Maximum</option>
				<option value="Rooms">Rooms</option>-->
			</select>
			<button id="searchAction" type="button">Search</button>
		</form>

		{{#listings}}
  			<b>{{Neighborhood}}</b>
  			<p>Pets? {{Pet}}</p>
  			{{#Photos}}
  				<img src={{Photo}}>
  			{{/Photos}}
		{{/listings}}

	</body>

</html>

<h1>{{popularity}}</h1>

<script type="text/javascript">
	$('#searchAction').click(function(e) {
		var query = $("#query").val();
		var type = $("#typeSelect").val();
		$.ajax({
			url:'/listings',
			type:'POST',
			data: {
				query: query,
				type: type
			},
			dataType:'json',
			success:function(res) {
				console.log(res);
			}
		});
	});
</script>